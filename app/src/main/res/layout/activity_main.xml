        android:backgroundTint="@color/vivid_sky_blue"
        android:gravity="center"
        android:textSize="34sp"
        android:letterSpacing="0.1"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    <Button
        android:layout_width="wrap_content"
